{
  "name": "bynd-frontend",
  "version": "0.0.1",
  "description": "Modular & Reuseable front-end components, helpers and tools",
  "main": "scripts/index.js",
  "readme": "README.md",
  "contributors": [
    {
      "name": "Simon Staton",
      "email": "simon.staton@bynd.com"
    }
  ],
  "license": "MIT",
  "repository": "bitbucket:byndops/bynd-frontend",
  "engines": {
    "node": ">=8.1.3"
  },
  "config": {
    "scripts": {
      "src": "scripts/src",
      "dist": "scripts/dist"
    }
  },
  "scripts": {
    "build": "babel $npm_package_config_scripts_src --out-dir $npm_package_config_scripts_dist --ignore .spec.js",
    "watch": "npm run build -- --watch",
    "test:unit": "./node_modules/jest/bin/jest.js"
  },
  "jest": {
    "verbose": true,
    "rootDir": ".",
    "collectCoverage": true,
    "coverageDirectory": "reports/coverage",
    "resetMocks": true,
    "globals": {
      "__isUnit__": true
    }
  },
  "peerDependencies": {
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-config-google": "^0.7.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-jest": "^20.0.3",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "jest": "^20.0.4",
    "react": "^15.6.1",
    "react-test-renderer": "^15.6.1"
  }
}
