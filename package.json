{
  "name": "bynd-frontend",
  "version": "1.0.3",
  "description": "Modular & Reuseable front-end components, helpers and tools",
  "main": "scripts/index.js",
  "readme": "README.md",
  "contributors": [
    {
      "name": "Simon Staton",
      "email": "simon.staton@bynd.com"
    }
  ],
  "license": "MIT",
  "repository": "bitbucket:byndops/bynd-frontend",
  "engines": {
    "node": ">=8.1.3"
  },
  "config": {
    "scripts": {
      "src": "scripts/src",
      "dist": "scripts/dist"
    }
  },
  "scripts": {
    "build": "babel $npm_package_config_scripts_src --out-dir $npm_package_config_scripts_dist --ignore .spec.js",
    "watch": "npm run build -- --watch",
    "demo": "./node_modules/webpack-dev-server/bin/webpack-dev-server.js --progress --watch --content-base demo/",
    "test:unit": "./node_modules/jest/bin/jest.js",
    "test:lint": "./node_modules/eslint/bin/eslint.js $npm_package_config_scripts_src --ext .js --ext .jsx"
  },
  "jest": {
    "verbose": true,
    "rootDir": ".",
    "collectCoverage": true,
    "coverageDirectory": "reports/coverage",
    "resetMocks": true,
    "globals": {
      "__isUnit__": true
    }
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "eslint": "^3.19.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "jest": "^20.0.4",
    "path": "^0.12.7",
    "pre-commit": "^1.2.2",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-test-renderer": "^15.6.1",
    "webpack": "^3.2.0",
    "webpack-dev-server": "^2.5.1"
  },
  "dependencies": {
    "eslint-config-airbnb": "^15.0.2",
    "eslint-config-google": "^0.8.1"
  },
  "pre-commit": [
    "test:lint",
    "test:unit"
  ]
}
